// FUNCTION 
FUNCTION dot_product (ps:INTEGER ,v1: ARRAY_OF INTEGER,V2:ARRAY_OF INTEGER,n:INTEGER) :INTEGER
VAR
    i:INTEGER; 
BEGIN
    FOR i FROM 0 TO n-1 STEP step  DO
        ps+= (v1[i]*v2[i])
    END_FOR
