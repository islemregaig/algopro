
PROCEDURE dot_product( VAR ps:INTEGER ,VAR v1: ARRAY_OF INTEGER,  VAR V2:ARRAY_OF INTEGER,n:INTEGER)
VAR
    i:INTEGER;   
BEGIN

    FOR i FROM 0 TO n-1 STEP step  DO
        ps+= (v1[i]*v2[i])
    END_FOR
    write(ps) 
END

